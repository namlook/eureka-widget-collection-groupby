<div class="panel panel-default">
    {{#if label}}
        <div class="panel-heading">{{{label}}}</div>
    {{/if}}

    {{#if isLoading}}
        {{partial 'eureka-loading'}}
    {{else}}
        {{#if chartRepresentation}}

            <div class="panel-body">
                {{high-charts mode=_chartMode content=_chartData chartOptions=_chartOptions}}
            </div>

        {{else if singleValueRepresentation}}

            <p class="text-center">
                {{#if data}}
                    <h1>{{data}}</h1>
                {{else}}
                    <h1><small>no data</small></h1>
                {{/if}}
            </p>

        {{else}}

            <ul class="list-group">
            {{#each data as |group|}}
               <li class="list-group-item">
                    <span class="badge">{{group.count}}</span>
                    {{group.facet}}
                </li>
            {{/each}}
            </ul>

        {{/if}}

    {{/if}}

</div>